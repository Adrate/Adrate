<h1>Listing advertisements</h1>

<table>
  <thead>
    <tr>
      <th>Description</th>
      <th>Cost</th>
      <th>Startdate</th>
      <th>Enddate</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @advertisements.each do |advertisement| %>
      <tr>
        <td><%= advertisement.description %></td>
        <td><%= advertisement.cost %></td>
        <td><%= advertisement.startdate %></td>
        <td><%= advertisement.enddate %></td>
        <td><%= link_to 'Show', advertisement %></td>
        <td><%= link_to 'Edit', edit_advertisement_path(advertisement) %></td>
        <td><%= link_to 'Destroy', advertisement, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

